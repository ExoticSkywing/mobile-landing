<style is:global>
	.node-dot {
		position: absolute;
		width: 10px;
		height: 10px;
		border-radius: 50%;
		background: #22c55e;
		box-shadow: 0 0 8px 2px rgba(34, 197, 94, 0.6);
		transform: translate(-50%, -50%);
		animation: node-pulse 2s ease-in-out infinite;
	}

	.node-dot::before {
		content: '';
		position: absolute;
		inset: -4px;
		border-radius: 50%;
		background: rgba(34, 197, 94, 0.3);
		animation: node-ripple 2s ease-out infinite;
	}

	/* Stagger animations for natural effect */
	.node-dot:nth-child(2n) { animation-delay: 0.3s; }
	.node-dot:nth-child(3n) { animation-delay: 0.6s; }
	.node-dot:nth-child(4n) { animation-delay: 0.9s; }
	.node-dot:nth-child(5n) { animation-delay: 1.2s; }

	@keyframes node-pulse {
		0%, 100% {
			transform: translate(-50%, -50%) scale(1);
			opacity: 1;
		}
		50% {
			transform: translate(-50%, -50%) scale(1.2);
			opacity: 0.8;
		}
	}

	@keyframes node-ripple {
		0% {
			transform: scale(1);
			opacity: 0.6;
		}
		100% {
			transform: scale(2.5);
			opacity: 0;
		}
	}

	/* Dark mode - brighter nodes */
	.dark .node-dot {
		background: #4ade80;
		box-shadow: 0 0 12px 3px rgba(74, 222, 128, 0.7);
	}

	.dark .node-dot::before {
		background: rgba(74, 222, 128, 0.4);
	}

	/* Reduced motion preference */
	@media (prefers-reduced-motion: reduce) {
		.node-dot,
		.node-dot::before {
			animation: none;
		}
	}
</style>

